generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApplicationStatus {
  new
  applied
  interview
  offer
  rejected
}

model Job {
  id           Int          @id @default(autoincrement())
  title        String
  company      String
  location     String?
  url          String
  description  String
  status       ApplicationStatus @default(new)
  notes        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  coverLetter  CoverLetter?
  userId       String  
}

model CoverLetter {
  id         Int      @id @default(autoincrement())
  job        Job      @relation(fields: [jobId], references: [id])
  jobId      Int      @unique
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String?
  website   String?
  jobField  String?
  notes     String?
  userId    String    @unique
  exampleCoverLetters ExampleCoverLetter[] 
}

model ExampleCoverLetter {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [userId])
  userId    String
}